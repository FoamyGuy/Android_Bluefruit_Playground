<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_module_card"
        >


    <ImageView
        android:id="@+id/colorDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:src="@drawable/circle_neopixel" />

    <TextView
        android:id="@+id/moduleTitle"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/colorDot"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/moduleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_below="@id/moduleTitle"
        android:layout_toEndOf="@id/colorDot"
        android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>